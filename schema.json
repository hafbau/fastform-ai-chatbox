{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "ff-ai-chatbox",
    "friendlyName": "AI Chatbox",
    "description": "An AI-powered chat widget for Fastform",
    "icon": "MessageCircle",
    "hasChildren": false,
    "showEmptyState": false,
    "settings": [
      {
        "type": "text",
        "key": "url",
        "label": "Chat API URL",
        "required": true
      },
      {
        "type": "text",
        "key": "widgetTitle",
        "label": "Widget Title",
        "defaultValue": "Chatbot"
      },
      {
        "type": "text",
        "key": "greetingMessage",
        "label": "Greeting Message",
        "defaultValue": "Hello! How can I help you today?"
      },
      {
        "type": "boolean",
        "key": "responseIsAStream",
        "label": "Response is Streamed",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "key": "disableErrorAlert",
        "label": "Disable Error Alerts",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "key": "closeOnOutsideClick",
        "label": "Close on Outside Click",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "key": "openOnLoad",
        "label": "Open on Page Load",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "key": "isPopover",
        "label": "Show as Popover",
        "defaultValue": true,
        "description": "Show chat widget as a popover instead of modal"
      },
      {
        "type": "boolean",
        "key": "inPage",
        "label": "In-Page Mode",
        "defaultValue": false,
        "description": "Expand widget within its container instead of showing as modal/popover"
      }
    ],
    "context": [
      {
        "label": "Thread ID",
        "key": "threadId"
      },
      {
        "label": "User Data",
        "key": "user"
      }
    ]
  }
}
