{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "ff-ai-chatbox",
    "friendlyName": "AI Chatbox",
    "description": "Add an AI chatbox to your website",
    "icon": "MagicWand",
    "category": "AI",
    "hasChildren": false,
    "showEmptyState": false,
    "settings": [
      {
        "type": "text",
        "key": "url",
        "label": "Chat API URL",
        "required": true
      },
      {
        "type": "text",
        "key": "widgetTitle",
        "label": "Widget Title",
        "defaultValue": "Chat"
      },
      {
        "type": "text",
        "key": "greetingMessage",
        "label": "Greeting Message",
        "defaultValue": "Hello! How can I help you today?"
      },
      {
        "type": "select",
        "key": "mode",
        "label": "Display Mode",
        "defaultValue": "fullscreen",
        "options": [
          {
            "label": "Fullscreen (fills container)",
            "value": "fullscreen"
          },
          {
            "label": "Widget (with toggle button)",
            "value": "widget"
          }
        ]
      },
      {
        "type": "select",
        "key": "buttonPosition",
        "label": "Button Position",
        "defaultValue": "bottom-right",
        "options": [
          {
            "label": "Top Left",
            "value": "top-left"
          },
          {
            "label": "Top Right",
            "value": "top-right"
          },
          {
            "label": "Bottom Left",
            "value": "bottom-left"
          },
          {
            "label": "Bottom Right",
            "value": "bottom-right"
          },
          {
            "label": "Custom",
            "value": "custom"
          }
        ],
        "showIf": {
          "mode": "widget"
        }
      },
      {
        "type": "select",
        "key": "widgetPosition",
        "label": "Widget Position",
        "defaultValue": "right",
        "options": [
          {
            "label": "Top",
            "value": "top"
          },
          {
            "label": "Right",
            "value": "right"
          },
          {
            "label": "Bottom",
            "value": "bottom"
          },
          {
            "label": "Left",
            "value": "left"
          },
          {
            "label": "Custom",
            "value": "custom"
          }
        ],
        "showIf": {
          "mode": "widget"
        }
      },
      {
        "type": "boolean",
        "key": "buttonFixed",
        "label": "Fixed Button Position",
        "defaultValue": true,
        "description": "Button stays fixed when scrolling",
        "showIf": {
          "mode": "widget"
        }
      },
      {
        "type": "boolean",
        "key": "widgetFixed",
        "label": "Fixed Widget Position",
        "defaultValue": true,
        "description": "Widget stays fixed when scrolling",
        "showIf": {
          "mode": "widget"
        }
      },
      {
        "type": "boolean",
        "key": "showBackdrop",
        "label": "Show Backdrop",
        "defaultValue": true,
        "description": "Show a backdrop behind the widget when open",
        "showIf": {
          "mode": "widget"
        }
      },
      {
        "type": "boolean",
        "key": "openOnLoad",
        "label": "Open on Page Load",
        "defaultValue": false,
        "showIf": {
          "mode": "widget"
        }
      },
      {
        "type": "boolean",
        "key": "responseIsAStream",
        "label": "Response is Streamed",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "key": "disableErrorAlert",
        "label": "Disable Error Alerts",
        "defaultValue": false
      }
    ],
    "styles": [
      {
        "selector": ".chat-button",
        "label": "Chat Button",
        "properties": ["background", "border", "spacing", "typography", "size", "effects", "layout"],
        "showIf": {
          "mode": "widget"
        }
      },
      {
        "selector": ".chat-widget",
        "label": "Chat Widget",
        "properties": ["background", "border", "spacing", "size", "effects", "layout"]
      }
    ],
    "context": [
      {
        "type": "text",
        "key": "threadId",
        "label": "Thread ID"
      },
      {
        "type": "text",
        "key": "user",
        "label": "User ID"
      }
    ]
  }
}
