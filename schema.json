{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "ff-ai-chatbox",
    "friendlyName": "AI Chatbox",
    "description": "An AI-powered chat widget for Fastform",
    "icon": "MagicWand",
    "hasChildren": false,
    "showEmptyState": false,
    "settings": [
      {
        "type": "text",
        "key": "url",
        "label": "Chat API URL",
        "required": true
      },
      {
        "type": "text",
        "key": "widgetTitle",
        "label": "Widget Title",
        "defaultValue": "Ask Neil"
      },
      {
        "type": "text",
        "key": "greetingMessage",
        "label": "Greeting Message",
        "defaultValue": "Hello! How can I help you today?"
      },
      {
        "type": "boolean",
        "key": "responseIsAStream",
        "label": "Response is Streamed",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "key": "disableErrorAlert",
        "label": "Disable Error Alerts",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "key": "closeOnOutsideClick",
        "label": "Close on Outside Click",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "key": "openOnLoad",
        "label": "Open on Page Load",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "key": "isPopover",
        "label": "Show as Popover",
        "defaultValue": true,
        "description": "Show chat widget as a popover instead of modal"
      },
      {
        "type": "boolean",
        "key": "inPage",
        "label": "In-Page Mode",
        "defaultValue": false,
        "description": "Expand widget within its container instead of showing as modal/popover"
      },
      {
        "type": "boolean",
        "key": "enableAudioInput",
        "label": "Enable Voice Input",
        "defaultValue": true,
        "description": "Allow users to record voice messages"
      },
      {
        "type": "boolean",
        "key": "autoSendAudioMessage",
        "label": "Auto-send Voice Messages",
        "defaultValue": true,
        "description": "Automatically send message when voice recording stops"
      }
    ],
    "context": [
      {
        "type": "text",
        "key": "threadId",
        "label": "Thread ID"
      },
      {
        "type": "object",
        "key": "user",
        "label": "User Data"
      }
    ]
  }
}
